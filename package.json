{
  "name": "taxipro-backend-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Taxipro Backend",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "test": "jest --runInBand",
    "test:rules": "firebase emulators:exec --project taxipro-chofer --only firestore --config firebase.json \"jest firestore/tests --runInBand\"",
    "test:e2e:request-ride": "firebase emulators:exec --project taxipro-chofer --only auth,firestore,functions \"node tools/e2e_requestRide.js\""
  },
  "devDependencies": {
    "firebase-tools": "13.11.4",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.4.4",
    "@firebase/rules-unit-testing": "^3.0.0"
  }
}