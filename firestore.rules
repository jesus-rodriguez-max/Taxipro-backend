
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Drivers can only read and write their own data
    match /drivers/{driverId} {
      allow read, write: if request.auth != null && request.auth.uid == driverId;
    }

    // Rides can be created by any authenticated user
    // Rides can only be read by the user who created it or the assigned driver
    // Rides can only be updated by the assigned driver
    match /rides/{rideId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.driverId == request.auth.uid);
      allow update: if request.auth != null && request.auth.uid == resource.data.driverId;
    }
  }
}
